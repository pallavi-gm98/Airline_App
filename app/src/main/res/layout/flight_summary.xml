<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flightSummary"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="20dp">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Flight Summary"

            android:layout_marginTop="20dp">

        </TextView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Mysore - "
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t1"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/bangalore"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/t1">

            </TextView>

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:layout_below="@+id/t1"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">

            </TextView>
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu,12/02"
                android:layout_marginStart="20dp"
                android:layout_alignBaseline="@+id/t3"
                android:layout_toRightOf="@+id/t3"
                android:layout_marginLeft="30dp">

            </TextView>

            <TextView
                android:id="@+id/flightdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flight Details"
                android:textColor="@color/purple_500"
                android:textSize="20dp"
                android:layout_marginStart="80dp"
                android:layout_toRightOf="@+id/t2"
                android:layout_alignBaseline="@+id/t1"
                android:layout_marginLeft="0dp">

            </TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fare Summary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp">

    </TextView>
</RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_shadow_start_color"
        app:cardCornerRadius="10dp">


        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"
            android:text="@string/passengers"
            android:textColor="#000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/priceperheadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="PassengerPerHead"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            android:text="Total Amount"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="330dp"
            android:layout_marginLeft="50dp"
            android:text="1500/-"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="330dp"
            android:layout_marginLeft="50dp"
            android:text="1500/-"
            android:textSize="20dp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="330dp"
            android:layout_marginLeft="50dp"
            android:text="1500/-"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="330dp"
            android:layout_marginLeft="50dp"
            android:text="2"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="330dp"
            android:layout_marginLeft="50dp"
            android:text="3000/-"
            android:textSize="20dp"
            android:textColor="#000"/>


    </androidx.cardview.widget.CardView>

    <Button

        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Continue"
        android:layout_marginTop="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        >

    </Button>

</LinearLayout>