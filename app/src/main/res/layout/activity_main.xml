<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:scrollbars="none"
    android:scrollingCache="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SearchFlights"
                android:textStyle="bold"
                android:textSize="20dp">

            </TextView>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layone"
            android:background="@color/cardview_shadow_start_color"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"

                    android:layout_weight="1"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0.5dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.4sp"
                        android:layout_marginLeft="15.8dp"
                        android:layout_marginTop="15.8dp"
                        android:textColor="#74747a"
                        android:lineSpacingExtra="2.6sp"
                        android:text="@string/from"
                        android:layout_marginStart="15.8dp" />
                        <ImageView
                            android:id="@+id/dropdown"
                            android:layout_width="74dp"
                            android:layout_height="39dp"
                            android:layout_alignBaseline="@id/from"
                            android:layout_toEndOf="@id/from"
                            android:layout_marginEnd="20.8dp"
                            android:layout_marginRight="15.8dp"
                            android:layout_weight="0.10"
                            android:layout_marginStart="100dp"
                            android:src="@drawable/arrowdown"
                            android:layout_toRightOf="@id/from"
                            android:layout_marginLeft="100dp" />


<!--                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner-->
<!--                            android:id="@+id/spin"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:scrollbarSize="0dp">-->

<!--                        </com.toptoche.searchablespinnerlibrary.SearchableSpinner>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15.8dp"
                            android:layout_marginLeft="15.8dp"
                            android:layout_weight="1.8"
                            android:lineSpacingExtra="5sp"
                            android:text="@string/MYQ"
                            android:textColor="#131314"
                            android:textSize="23sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/mys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.8dp"
                        android:layout_marginLeft="15.8dp"
                        android:layout_marginBottom="15.8dp"
                        android:lineSpacingExtra="2.6sp"
                        android:text="@string/Mysore"
                        android:hint="Mysore"
                        android:textColorHint="@color/black"
                        android:textColor="#131314"
                        android:textSize="15.4sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15.8dp"
                            android:layout_marginLeft="15.8dp"
                            android:layout_marginTop="15dp"
                            android:lineSpacingExtra="2.6sp"
                            android:text="@string/to"
                            android:textColor="#74747a"
                            android:textSize="13.4sp" />


                        <ImageView
                            android:id="@+id/dropdown2"
                            android:layout_width="74dp"
                            android:layout_height="39dp"
                            android:layout_marginStart="110dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginEnd="15.8dp"
                            android:layout_marginRight="15.8dp"
                            android:layout_weight="0.10"
                            android:src="@drawable/arrowdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15.8dp"
                            android:layout_marginLeft="15.8dp"
                            android:layout_weight="1.8"
                            android:lineSpacingExtra="5sp"
                            android:text="@string/BLR"
                            android:textColor="#131314"
                            android:textSize="23sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/blr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.8dp"
                        android:layout_marginLeft="15.8dp"
                        android:layout_marginBottom="15.8dp"
                        android:lineSpacingExtra="2.6sp"
                        android:hint="@string/Banglore"
                        android:textColorHint="@color/black"
                        android:textColor="#131314"
                        android:textSize="15.4sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/L3"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0.5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.4sp"
                        android:layout_marginLeft="15.8dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#74747a"
                        android:lineSpacingExtra="2.6sp"
                        android:text="@string/depart"
                        android:layout_marginStart="15.8dp" />

                    <ImageView
                        android:id="@+id/dropdown3"
                        android:layout_width="74dp"
                        android:layout_height="39dp"
                        android:layout_marginEnd="15.8dp"
                        android:layout_marginRight="15.8dp"
                        android:layout_weight="0.10"
                        android:layout_marginStart="100dp"
                        android:src="@drawable/arrowdown"
                        android:layout_marginLeft="100dp" />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:weightSum="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="#131314"
                            android:layout_marginBottom="15.8dp"
                            android:layout_weight="1.8"
                            android:layout_marginLeft="15.8dp"
                            android:lineSpacingExtra="5sp"
                            android:text="21.04.2021
                             (WED)"
                            android:focusable="false"
                            android:layout_marginStart="15.8dp" />


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/L4"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.4sp"
                        android:layout_marginLeft="15.8dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#74747a"
                        android:lineSpacingExtra="2.6sp"
                        android:text="Return"
                        android:layout_marginStart="15.8dp" />

                        <ImageView
                            android:id="@+id/dropdown4"
                            android:layout_width="74dp"
                            android:layout_height="39dp"
                            android:layout_marginEnd="15.8dp"
                            android:layout_marginRight="15.8dp"
                            android:layout_marginStart="90dp"
                            android:layout_weight="0.10"
                            android:src="@drawable/arrowdown"
                            android:layout_marginLeft="100dp" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="#131314"
                            android:layout_weight="1.8"
                            android:layout_marginLeft="15.8dp"
                            android:layout_marginBottom="15.8dp"
                            android:lineSpacingExtra="5sp"
                            android:text="22.02.2021
                             (THU)"
                            android:focusable="false"
                            android:layout_marginStart="15.8dp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/L5"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:layout_marginRight="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0.5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.4sp"
                        android:layout_marginLeft="15.8dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#74747a"
                        android:lineSpacingExtra="2.6sp"
                        android:text="Class &amp; Travellers"
                        android:layout_marginStart="15.8dp" />
                    <ImageView
                        android:id="@+id/dropdown5"
                        android:layout_width="74dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="15.8dp"
                        android:layout_marginRight="15.8dp"
                        android:layout_weight="0.10"
                        android:src="@drawable/arrowdown"
                        android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:layout_marginLeft="15.8dp"
                            android:lineSpacingExtra="5sp"
                            android:text="1 adult, Economy"
                            android:layout_marginStart="15.8dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginBottom="19.8dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.8dp"
                        android:layout_marginLeft="15.8dp"
                        android:layout_marginTop="20dp"
                        android:lineSpacingExtra="2.6sp"
                        android:text="@string/type"
                        android:textColor="#74747a"
                        android:textSize="13.4sp" />
                    <ImageView
                        android:id="@+id/dropdown6"
                        android:layout_width="83dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="15.8dp"
                        android:layout_marginRight="15.8dp"
                        android:layout_weight="0.2"
                        android:layout_marginStart="100dp"
                        android:src="@drawable/arrowdown"
                        android:layout_marginLeft="100dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15.8dp"
                            android:layout_marginLeft="15.8dp"
                            android:layout_weight="1.8"
                            android:lineSpacingExtra="5sp"
                            android:text="@string/one_way"
                            android:textColor="#131314"
                            android:textSize="23sp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Search" />

    </LinearLayout>

</LinearLayout>
