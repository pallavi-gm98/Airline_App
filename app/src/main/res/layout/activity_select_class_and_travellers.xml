<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:text="Select Travellers and Class"/>


    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD NUMBER OF TRAVELLERS"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />



    <TableRow
        android:weightSum="3"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="86dp"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adult"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12yrsAndAbove"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/sub"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/number"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/add"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </TableRow>

    <TableRow
        android:weightSum="3"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="86dp"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="2 - 12yrs"
                android:textSize="20dp"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/sub2"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/number2"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/add2"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </TableRow>

    <TableRow
        android:weightSum="3"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/L3"
            android:layout_width="86dp"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infant"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Under 2yrs"
                android:textSize="20dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/sub3"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/number3"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/add3"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </TableRow>
    <TextView
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE CABIN CLASS"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="First Class"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginStart="30dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Economy Class"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Business Class"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </androidx.cardview.widget.CardView>
    </TableRow>

    <Button

        android:id="@+id/done"
        android:layout_width="2dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="DONE"
        android:textColor="@color/white"
        android:textSize="20dp" />

</TableLayout>